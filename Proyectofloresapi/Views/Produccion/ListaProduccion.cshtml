@model List<Proyectofloresapi.Models.ViewModelProduccion.ListProduccionViewModel>
@{
    ViewBag.Title = Recursos.Recurso.produccion_registrada;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align: right; padding:5px;">
    <a href="~/Produccion/NuevaProduccion" class="btn btn-primary">@Recursos.Recurso.boton_nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>

                <th>@Recursos.Recurso.Invernadero_finca</th>
                <th>@Recursos.Recurso.Bloque_numero</th>
                <th>@Recursos.Recurso.Variedad_flor</th>
                <th>@Recursos.Recurso.Produccion_plantas</th>
                <th>@Recursos.Recurso.Produccion_area</th>
                <th>@Recursos.Recurso.Produccion_camas</th>
                <th>@Recursos.Recurso.Produccion_nsemanas</th>
                <th></th>
            </tr>
            @foreach (var oELemento in Model)
            {
                <tr>

                    <td>@oELemento.Namefinca</td>
                    <td>@oELemento.Numerobloque</td>
                    <td>@oELemento.Variedadflor</td>
                    <td>@oELemento.Plantas</td>
                    <td>@oELemento.Areas</td>
                    <td>@oELemento.Camas</td>
                    <td>@oELemento.Nsemana</td>
                    <td>
                        <a class="btn btn-primary" href="~/Produccion/EditarProduccion/@oELemento.Idproduccion">@Recursos.Recurso.boton_editar</a>
                        <a class="btn btn-danger" href="~/Produccion/EliminarProduccion/@oELemento.Idproduccion">@Recursos.Recurso.boton_eliminar</a>
                    </td>
                </tr>
            }
        </table>

    </div>

</div>