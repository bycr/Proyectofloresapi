@model List<Proyectofloresapi.Models.ViewModelBloque.ListBloqueViewModel>
@{
    ViewBag.Title = Recursos.Recurso.Bloque_lista;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@* href direcciona al archivo tabla controllers y al metodo nuevo*@
<div class="row" style="text-align: right; padding:5px;">
    <a href="~/Bloque/NuevoBloque" class="btn btn-primary">@Recursos.Recurso.boton_nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>@Recursos.Recurso.Bloque_numero</th>
                <th>@Recursos.Recurso.Bloque_ppto_año</th>
                <th>@Recursos.Recurso.Bloque_llevamos_año</th>
                <th>@Recursos.Recurso.Bloque_diferenciaaño</th>
                <th>@Recursos.Recurso.Bloque_presupuestadomes</th>
                <th>@Recursos.Recurso.Bloque_llevamosmes</th>
                <th>@Recursos.Recurso.Bloque_diferenciames</th>
                <th>@Recursos.Recurso.Usuario_cedula</th>
                <th>@Recursos.Recurso.Invernadero_numero</th>
                <th>@Recursos.Recurso.Invernadero_finca</th> 
                <th>@Recursos.Recurso.Bloque_fecha</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Numerobloque</td>
                    <td>@oElemento.Presupuestadoaño</td>
                    <td>@oElemento.Llevamosaño</td>
                    <td>@oElemento.Diferenciaaño</td>
                    <td>@oElemento.Presupuestadomes</td>
                    <td>@oElemento.Llevamosmes</td>
                    <td>@oElemento.Diferenciames</td>
                    <td>@oElemento.Cedula</td>
                    <td>@oElemento.Idinvernadero</td>
                    <td>@oElemento.NameFinca</td>
                    <td>@oElemento.Fechacreado</td>
                    <td>
                        <a class="btn btn-primary" href="~/Bloque/EditarBloque/@oElemento.Idbloque">@Recursos.Recurso.boton_editar</a>
                        <a class="btn btn-danger" href="~/Bloque/EliminarBloque/@oElemento.Idbloque">@Recursos.Recurso.boton_eliminar</a>
                    </td>
                </tr>
            }

        </table>
    </div>

</div>
